<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/tecent_color"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:background="@color/DeepSkyBlue1"
    android:id="@+id/alter_password_title"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/alter_password_finish"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:src="@drawable/ic_back_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="修改密码"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>

<LinearLayout
    android:id="@+id/old_password_lay"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/alter_password_title"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginRight="@dimen/dimens_15px"
    android:layout_marginLeft="@dimen/dimens_15px"
    android:orientation="vertical">
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旧密码："
        android:textColor="@color/gray"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/old_password_edit"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="若包含字母，请注意区分大小写"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:textCursorDrawable="@null"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/new_password_lay"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/dimens_15px"
        android:layout_marginLeft="@dimen/dimens_15px"
        android:layout_below="@+id/old_password_lay"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/new_password_edit"
            android:paddingBottom="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="8-16位至少包含数字/字母/字符2种组合"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sec_new_password_lay"
        android:layout_marginTop="75dp"
        android:layout_marginRight="@dimen/dimens_15px"
        android:layout_marginLeft="@dimen/dimens_15px"
        android:layout_below="@+id/old_password_lay"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次输入新密码："
            android:textColor="@color/gray"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/sec_new_password_edit"
            android:paddingBottom="10dp"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="8-16位至少包含数字/字母/字符2种组合"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="189dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/alter_password_bu"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/shape_button"
            android:text="点击修改"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>



</RelativeLayout> 