<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tecent_color"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:background="@color/DeepSkyBlue1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/corp_load_course_Back_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:paddingTop="5dp"
                android:src="@drawable/ic_back_gray"/>
            <TextView
                android:id="@+id/corp_load_course_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:textSize="21sp"
                android:text="导入课程表"
                android:textColor="@color/white"
                />
            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/tecent_color"
            android:layout_height="18dp"/>
        <TextView
            android:id="@+id/corp_load_course_Grade_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/MediumPurple"/>
        <TextView
            android:id="@+id/corp_load_course_Xueqi_tv"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="18sp"

            android:textColor="@color/MediumPurple"/>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_corner_white">

        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/corp_load_course_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:drawablePadding="5dp"
            android:hint="请输入学号"
            android:textCursorDrawable="@drawable/shape_et_cursor_color"
            android:singleLine="true"
            android:textColorHint="@color/beautifulbackground"
            android:textColor="@color/Seashell4"
            android:background="@null"
            />

        <EditText
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:id="@+id/corp_load_course_pwd"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="5dp"
            android:hint="请输入密码"
            android:textCursorDrawable="@drawable/shape_et_cursor_color"
            android:singleLine="true"
            android:textColorHint="@color/beautifulbackground"
            android:textColor="@color/Seashell4"
            android:background="@null"
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/corp_load_course_login"
        android:layout_width="320dp"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:text="点击导入"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:background="@drawable/shape"/>


</LinearLayout>