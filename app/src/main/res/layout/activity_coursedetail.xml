<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:background="@color/DeepSkyBlue1"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/coursedetial_back_tv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:src="@drawable/ic_back_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="课程详情"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        >
            <TextView
                android:id="@+id/course_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="@color/grey31"
                android:textSize="25sp"/>

        <LinearLayout
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/course_school"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/course_college_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/grey31"
                android:textSize="15sp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/course_place"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/course_place_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/grey31"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/course_zhoushu"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/course_zhoushu_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/grey31"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/course_jieshu"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/course_jieshu_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/grey31"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/course_teacher"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/course_teachername_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/grey31"
                android:textSize="15sp"/>
        </LinearLayout>


    </LinearLayout>




</LinearLayout>