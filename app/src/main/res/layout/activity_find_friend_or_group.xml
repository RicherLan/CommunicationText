<RelativeLayout
    android:background="@color/tecent_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/DeepSkyBlue1"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back_gray"
                android:id="@+id/finish_find"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimens_10px"
            android:layout_height="30dp"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/choose_add_friend"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加好友"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@+id/choose_add_friend"
                    android:id="@+id/choose_add_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="加群聊"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </RelativeLayout>


        </RelativeLayout>
        <FrameLayout
            android:id="@+id/friend_or_group_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>