<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimens_20px"
    android:layout_marginLeft="@dimen/dimens_20px"
    android:background="@drawable/shape_corner_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/addalter_delete_corppart_layout"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/addalter_delete_corppart_iv"
                android:clickable="true"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/addalter_delete_corppart_tv"
                android:gravity="center"
                android:text="删除"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/addalter_alter_corppart_layout"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/addalter_alter_corppart_iv"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/addalter_alter_corppart_tv"
                android:clickable="true"
                android:gravity="center"
                android:text="修改"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>