<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dimens_20px"
    android:layout_marginLeft="@dimen/dimens_20px"
    android:background="@drawable/shape_corner_white">
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/delete_alarm"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="提示"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/delete_alarm_info"
        android:gravity="center_vertical"
        android:layout_below="@+id/delete_alarm"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxWidth="200dp"
        android:maxLines="10"/>
    <RelativeLayout
        android:layout_below="@+id/delete_alarm_info"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/yes_delete"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="确认"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:gravity="center"/>
            <TextView
                android:id="@+id/no_delete"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="center"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>