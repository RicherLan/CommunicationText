<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white">
    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_more_comment_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user_image1"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_more_comment_nickname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/item_more_comment_content"
                android:maxLines="3"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="s就开始登记反馈都是"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_more_comment_time"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:text="2小时"
            android:maxLines="1"
            android:textSize="10sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/item_more_comment_reply"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="回复"
            android:gravity="center"
            android:textSize="10sp"/>

    </LinearLayout>



</LinearLayout>